<%= form_with(model: [ :admin, @player ], local: true) do |f|%>
<div class="player_wrapper">
  <div class="field">
    <%= f.label :name,"名前"%>
    <%= f.text_field :name%>
  </div>

  <div class="field">
    <%= f.label :number,"背番号"%>
    <%= f.text_field :number%>
  </div>

  <div class="field">
    <%= f.label :from,"出身校"%>
    <%= f.text_field :from%>
  </div>

  <div class="field">
    <%= f.label :height,"身長"%>
    <%= f.text_field :height%>
  </div>

  <div class="field">
    <%= f.label :img, "画像"%>
    <%= f.file_field :img, class: "image" %>
  </div>

  <div class="field">
    <%= f.label :position, "ポジション"%>
    <%= f.select :position, ["PG","SG","SF","PF","C"]%>
  </div>

  <div class="field">
    <%= f.label :year, "学年"%>
    <%= f.select :year, ["4","3","2","1"]%>
  </div>

  <div class="actions">
    <%= f.submit%>
  </div>
</div>
<%end%>
